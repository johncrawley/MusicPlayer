<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_color_day</item>
        <item name="colorPrimaryDark">@color/primary_color_dark_day</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/background_day</item>
        <item name="android:textColor">@color/text_day</item>
        <item name="android:buttonTint">@color/primary_color</item>
        <item name="tabTextColor">@color/tab_text</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="buttonTint">#3D3D3D</item>
       <!-- <item name="android:navigationBarColor">@android:color/black</item> -->
        <item name="buttonStyle">@style/customButtonStyle</item>
        <item name="materialButtonStyle">@style/customMaterialOutlineButtonStyle</item>
        <item name="android:alertDialogTheme">@style/customAlertDialogStyle</item>
        <item name="imageButtonStyle">@style/customImageButtonStyle</item>
        <item name="android:fontFamily">@font/le_patin_magicien_xb7d</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="list_item_focused">@color/list_item_focused_day</item>
        <item name="seek_bar_background">@color/seek_bar_background</item>
        <item name="track_info_background">@color/track_info_background_day</item>
        <item name="dialog_text_color">@color/tab_text</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="toggle_button_background">@color/toggle_button_background</item>
        <item name="deselected_toggle_button">@color/deselected_toggle_button</item>
        <item name="toggle_button_text_unchecked">@color/toggle_button_text_unchecked</item>
        <item name="dialog_background_color">@color/default_dialog_background_day</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="play_button">@drawable/ic_play_light</item>
        <item name="pause_button">@drawable/ic_pause_light</item>
        <item name="stop_button">@drawable/ic_stop_light</item>
        <item name="previous_track_button">@drawable/ic_prev_light</item>
        <item name="next_track_button">@drawable/ic_next_light</item>
        <item name="shuffle_button">@drawable/ic_shuffle_light</item>
        <item name="options_button">@drawable/ic_config</item>
        <item name="search_button">@drawable/ic_search</item>
    </style>


    <style name="AppTheme_no_action_bar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="SettingsTheme" parent="Theme.Material3.DayNight">
