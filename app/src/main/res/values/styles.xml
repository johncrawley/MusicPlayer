<resources>

    <style name="AppTheme" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:buttonTint">@color/primary_color</item>
        <item name="tabTextColor">@color/tab_text</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="buttonTint">#3D3D3D</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="buttonStyle">@style/customButtonStyle</item>
        <item name="materialButtonStyle">@style/customMaterialOutlineButtonStyle</item>
        <item name="android:alertDialogTheme">@style/customAlertDialogStyle</item>
        <item name="imageButtonStyle">@style/customImageButtonStyle</item>
    </style>


    <style name="SettingsTheme" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/settings_primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/settings_color_accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/settings_text</item>
    </style>


    <style name="customMaterialOutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundColor">@color/color_accent</item>
        <item name="strokeColor">@color/button_outline</item>
    </style>


    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorAccent">@color/color_accent_yellow</item>
        <item name="android:textColor">@color/text_yellow</item>
        <item name="android:buttonTint">@color/primary_yellow</item>
        <item name="materialButtonStyle">@style/yellowMaterialButtonStyle</item>
    </style>


    <style name="yellowMaterialButtonStyle" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_yellow</item>
        <item name="strokeColor">@color/button_outline_yellow</item>
    </style>


    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorAccent">@color/color_accent_red</item>
        <item name="android:textColor">@color/text_red</item>
        <item name="android:buttonTint">@color/primary_red</item>
        <item name="materialButtonStyle">@style/materialButtonStyleRed</item>
    </style>


    <style name="materialButtonStyleRed" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_red</item>
        <item name="strokeColor">@color/button_outline_red</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/color_accent_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:buttonTint">@color/primary_blue</item>
        <item name="materialButtonStyle">@style/materialButtonStyleBlue</item>
    </style>


    <style name="materialButtonStyleBlue" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_blue</item>
        <item name="strokeColor">@color/button_outline_blue</item>
    </style>

    <style name="GreyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_grey</item>
        <item name="colorAccent">@color/color_accent_grey</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:buttonTint">@color/primary_grey</item>
        <item name="materialButtonStyle">@style/materialButtonStyleGrey</item>
    </style>

    <style name="materialButtonStyleGrey" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_grey</item>
        <item name="strokeColor">@color/button_outline_grey</item>
    </style>


    <style name="MagentaTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_magenta</item>
        <item name="colorAccent">@color/color_accent_magenta</item>
        <item name="android:textColor">@color/text_magenta</item>
        <item name="android:buttonTint">@color/primary_magenta</item>
        <item name="materialButtonStyle">@style/materialButtonStyleMagenta</item>
    </style>

    <style name="materialButtonStyleMagenta" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_magenta</item>
        <item name="strokeColor">@color/button_outline_magenta</item>
    </style>


    <style name="CyanTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_cyan</item>
        <item name="colorAccent">@color/color_accent_cyan</item>
        <item name="android:textColor">@color/text_cyan</item>
        <item name="android:buttonTint">@color/primary_cyan</item>
        <item name="materialButtonStyle">@style/materialButtonStyleCyan</item>
    </style>

    <style name="materialButtonStyleCyan" parent="customMaterialOutlineButtonStyle">
        <item name="backgroundColor">@color/color_accent_cyan</item>
        <item name="strokeColor">@color/button_outline_cyan</item>
    </style>


    <style name="customImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/background</item>
        <item name="tint">@color/image_button_tint</item>
        <item name="cornerRadius">15dp</item>
    </style>


    <style name="customButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_background_tint</item>
    </style>



    <style name="customAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dialog_background</item>
    </style>


</resources>
