<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="8dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/trackInfoScrollView"
        android:layout_width="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_height="500dp">

        <LinearLayout
            android:id="@+id/trackInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:background="?attr/track_info_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/trackLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_title"
                    />
                <TextView
                    android:id="@+id/track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/artistLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_artist"
                    />
                <TextView
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/albumLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_album"
                    />
                <TextView
                    android:id="@+id/album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/trackNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_track_number"
                    />
                <TextView
                    android:id="@+id/trackNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/discLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_disc"
                    />
                <TextView
                    android:id="@+id/disc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lengthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_length"
                    />
                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/genreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_genre"
                    />
                <TextView
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/yearLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_year"
                    />
                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bitrateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_bitrate"
                    />
                <TextView
                    android:id="@+id/bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/track_info_text_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pathLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:text="@string/track_info_path"
                    />
                <TextView
                    android:id="@+id/path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/track_info_text_size"
                    android:layout_marginHorizontal="@dimen/track_info_text_value_horizontal_margin"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/dismissTrackInfoDialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dialog_option_button_margin_horizontal"
            android:text="@android:string/ok" />

    </LinearLayout>

</LinearLayout>