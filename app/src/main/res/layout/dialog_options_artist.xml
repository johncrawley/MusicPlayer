<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_fragment_margin"
    android:gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <Button
        android:id="@+id/loadArtistTracksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dialog_option_button_margin_horizontal"
        android:layout_marginVertical="@dimen/dialog_option_button_margin_vertical"
        android:text="@string/load" />

    <Button
        android:id="@+id/addArtistTracksToCurrentPlaylistButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/dialog_option_button_margin_horizontal"
        android:layout_marginVertical="@dimen/dialog_option_button_margin_vertical"
        android:text="@string/add_to_list" />

    <Button
        android:id="@+id/addRandomTracksToCurrentPlaylistButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/dialog_option_button_margin_horizontal"
        android:layout_marginVertical="@dimen/dialog_option_button_margin_vertical"
        android:text="@string/add_rand_list" />
</LinearLayout>