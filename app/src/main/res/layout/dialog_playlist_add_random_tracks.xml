<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/listLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_label_default"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/toggleButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ToggleButton
            android:id="@+id/allTracksToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/toggle_button_all_tracks"
            android:textOff="@string/toggle_button_all_tracks"
            />

        <ToggleButton
            android:id="@+id/artistsToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/toggle_button_artists"
            android:textOff="@string/toggle_button_artists" />

        <ToggleButton
            android:id="@+id/genresToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/toggle_button_genres"
            android:textOff="@string/toggle_button_genres"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:background="@color/background"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleButtonLayout"
        app:layout_constraintBottom_toTopOf="@id/numberOfTracksLayout"
        />

    <TextView
        android:id="@+id/noItemsFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_genres_found"
        android:textSize="@dimen/no_list_items_found_text_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listLabel"
        app:layout_constraintBottom_toTopOf="@id/numberOfTracksLayout"
        />

    <LinearLayout
        android:id="@+id/numberOfTracksLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/dialog_layout_padding_horizontal"
        style="@android:attr/buttonBarStyle"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintTop_toBottomOf="@id/recyclerView">

        <TextView
            android:id="@+id/NumberOfTracksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginVertical="12dp"
            android:labelFor="@id/numberOfTracksEditText"
            android:text="@string/add_random_tracks_number"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/button_text_decrease_random_tracks"
                android:id="@+id/decreaseNumberOfRandomTracksButton" />

            <EditText
                android:id="@+id/numberOfTracksEditText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:minLines="1"
                android:maxLines="1"
                android:gravity="center"
                android:autofillHints="no"
                android:ems="12"
                android:inputType="number" />


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/button_text_increase_random_tracks"
                android:id="@+id/increaseNumberOfRandomTracksButton" />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/dialog_layout_padding_horizontal"
        style="@android:attr/buttonBarStyle"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_margin="@dimen/list_button_margin_horizontal"
            android:id="@+id/cancelDialogButton"
            android:text="@android:string/cancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_button_margin_horizontal"
            android:id="@+id/okButton"
            android:visibility="visible"
            style="@android:attr/buttonBarButtonStyle"
            android:text="@android:string/ok"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>