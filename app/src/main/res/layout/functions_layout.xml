<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/functions_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginVertical="@dimen/_18sdp"
    android:background="@drawable/functions_menu"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="0dp"
        android:padding="@dimen/_4sdp"
        android:src="?attr/search_button"
        android:contentDescription="@string/search_desc" />

    <ImageButton
        android:id="@+id/configButton"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="0dp"
        android:padding="@dimen/_4sdp"
        android:src="?attr/settings_button"
        android:contentDescription="@string/settings_desc" />

</LinearLayout>
