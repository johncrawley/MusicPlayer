<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/functions_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="18dp"
    android:background="@drawable/functions_menu"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/function_button_margin"
        android:padding="@dimen/function_button_padding"
        android:src="?attr/search_button"
        android:contentDescription="@string/search_desc" />

    <ImageButton
        android:id="@+id/configButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/function_button_margin"
        android:padding="@dimen/function_button_padding"
        android:src="?attr/settings_button"
        android:contentDescription="@string/settings_desc" />

</LinearLayout>
